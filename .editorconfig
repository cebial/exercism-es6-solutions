# top-most EditorConfig file
root = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.js]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# Matches the exact files either package.json or .travis.yml
[package.json]
indent_style = space
indent_size = 2
